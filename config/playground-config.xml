<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean class="org.apache.ignite.configuration.IgniteConfiguration">
		<property name="peerClassLoadingEnabled" value="true"/>
		<property name="metricsLogFrequency" value="60000"/>
		<property name="gridLogger">
          		<bean class="org.apache.ignite.logger.java.JavaLogger">
              			<constructor-arg type="java.util.logging.Logger">
                  			<bean class="java.util.logging.Logger">
                      				<constructor-arg type="java.lang.String" value="global"/>
                	  		</bean>
           	   		</constructor-arg>
          		</bean>
      		</property>
		<property name="clientConnectorConfiguration">
			<bean class="org.apache.ignite.configuration.ClientConnectorConfiguration">
				<property name="host" value="10g"/>
			</bean>
		</property>

		<property name="cacheConfiguration">
			<list>
				<bean abstract="true" class="org.apache.ignite.configuration.CacheConfiguration" id="cache-template-bean">
					<!-- when you create a template via XML configuration, you must add an asterisk to the name of the template -->
					<property name="name" value="TPCH*"/>
					<property name="cacheMode" value="PARTITIONED"/>
					<property name="backups" value="0"/>
					<property name="statisticsEnabled" value="true"/>
				</bean>
				<bean abstract="true" class="org.apache.ignite.configuration.CacheConfiguration" id="cache-template-bean">
					<!-- when you create a template via XML configuration, you must add an asterisk to the name of the template -->
					<property name="name" value="CacheA*"/>
					<property name="cacheMode" value="PARTITIONED"/>
					<property name="backups" value="0"/>
					<property name="statisticsEnabled" value="true"/>
					<property name="nodeFilter">
						<bean class="org.apache.ignite.util.AttributeNodeFilter">
							<constructor-arg value="HostCacheA"/>
							<constructor-arg value="true"/>
						</bean>
					</property>
					<!-- Other cache parameters -->
				</bean>
				<bean abstract="true" class="org.apache.ignite.configuration.CacheConfiguration" id="cache-template-bean2">
					<!-- when you create a template via XML configuration, you must add an asterisk to the name of the template -->
					<property name="name" value="CacheB*"/>
					<property name="cacheMode" value="PARTITIONED"/>
					<property name="backups" value="0"/>
					<property name="statisticsEnabled" value="true"/>
					<property name="nodeFilter">
						<bean class="org.apache.ignite.util.AttributeNodeFilter">
							<constructor-arg value="HostCacheB"/>
							<constructor-arg value="true"/>
						</bean>
					</property>
					<!-- Other cache parameters -->
				</bean>
			</list>
		</property>

		<property name="sqlConfiguration">
			<bean class="org.apache.ignite.configuration.SqlConfiguration">
				<property name="queryEnginesConfiguration">
					<list>
						<bean class="org.apache.ignite.indexing.IndexingQueryEngineConfiguration">
							<property name="default" value="false"/>
						</bean>
						<bean class="org.apache.ignite.calcite.CalciteQueryEngineConfiguration">
							<property name="default" value="true"/>
						</bean>
					</list>
				</property>
			</bean>
		</property>

	</bean>
</beans>
